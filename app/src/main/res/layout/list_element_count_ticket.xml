<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/content"
              android:baselineAligned="false">

    <!-- payer content -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_content"
            android:orientation="horizontal"
            >
    </LinearLayout>


    <LinearLayout android:layout_width="0px"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="100"
            >

        <!-- top line -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                >

            <!-- description -->
            <TextView android:id="@+id/text1"
                      android:layout_width="0px"
                      android:layout_height="wrap_content"
                      android:gravity="left|center_vertical"
                      android:text="je suis tres long blopk pok opkpo dfod dfdf df dfokf podf df"
                      android:textSize="14sp"
                      android:autoText="false"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:layout_weight="100"
                    />

            <!-- date -->
            <TextView android:id="@+id/text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical|right"
                      android:textSize="12sp"
                      android:textStyle="italic"
                      android:layout_weight="1"
                      android:text="2014-45-54"
                    />
        </LinearLayout>

        <!-- bottom line -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                >

            <!-- debtor content -->
            <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/prayers_content"
                    android:layout_weight="100"
                    >
            </LinearLayout>

            <!-- category -->
            <TextView android:id="@+id/text3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical|right"
                      android:textSize="14sp"
                      android:layout_weight="1"
                      android:text="Course"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|right">

        <!-- value -->
        <TextView android:id="@+id/text_value"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:gravity="center|right"
                  android:layout_gravity="center_vertical|right"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:text="256,53â‚¬"
                />
    </LinearLayout>
</LinearLayout>
